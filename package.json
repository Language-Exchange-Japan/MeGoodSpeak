{
  "name": "language-exchange-app",
  "version": "1.0.0",
  "description": "A modern language exchange platform",
  "main": "index.js",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build": "npm run build:backend && npm run build:frontend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:fix": "npm run lint:fix --workspace=backend && npm run lint:fix --workspace=frontend",
    "install:all": "npm install"
  },
  "dependencies": {
    "country-list": "^2.3.0",
    "iso-639-1": "^3.1.5"
  },
  "devDependencies": {
    "@types/country-list": "^2.1.4"
  }
}
